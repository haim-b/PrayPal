<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Yahadut.DayTimes.DayTimes">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Text="Binding Title" Margin="3" FontAttributes="Bold"/><!--Style="{StaticResource TitleTextBlockStyle}"-->
        <ListView Grid.Row="1" ItemsSource="{Binding Times}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Title, Mode=OneTime}"/> <!--Style="{StaticResource TitleTextBlockStyle}" FontSize="{StaticResource TextStyleLargeFontSize}"-->
                    </DataTemplate>
                </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
