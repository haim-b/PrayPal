<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Yahadut.DayTimes.DayTimesView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Text="{Binding Title}" Margin="3" FontAttributes="Bold"/><!--Style="{StaticResource TitleTextBlockStyle}"-->
        <ListView Grid.Row="1" ItemsSource="{Binding Times}" SelectionMode="None" SeparatorVisibility="None" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<ViewCell>
                        <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding Title, Mode=OneTime}"/>
                                    <Label Text="{Binding Time}"/>
                                    --><!--Style="{StaticResource TitleTextBlockStyle}" FontSize="{StaticResource TextStyleLargeFontSize}"--><!--
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>-->
                    <TextCell Text="{Binding Title, Mode=OneTime}" TextColor="{DynamicResource Primary}"/>
                </DataTemplate>
                </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
